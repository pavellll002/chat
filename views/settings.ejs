						<input type="password" name="lastPassword" id="" placeholder="Текущий пароль">
						<br><br>
						<input type="password" name="newPassword" id="" placeholder="Новый пароль">
						<br><br>
						<button id="changePas">Изменить</button>
						<br><br>
						<hr>	
		</div>
		
		</div>

		<aside class="col-md-2"></aside>

